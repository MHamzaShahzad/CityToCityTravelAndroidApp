<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    tools:context=".FragmentPostDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_post_description"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/placeholder_photos" />

        <TextView
            android:id="@+id/detail_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_post_description"/>

        <Button
            android:id="@+id/btn_avail_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avail Offer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/detail_post_description"/>

        <LinearLayout
            android:id="@+id/layout_call_sms_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/send_sms_to_owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="SMS" />

            <Button
                android:id="@+id/call_to_owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Call" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>