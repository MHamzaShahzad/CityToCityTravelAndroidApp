<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_post_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_post_recycler"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/style_button_lining"
            android:src="@drawable/placeholder_photos" />

        <LinearLayout
            android:id="@+id/layout_cost_per_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_post_recycler"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_button_solid_circle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="@font/ralewaylight"
                android:paddingLeft="10dp"
                android:text="Cost Per Person"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/place_post_cost_per_seat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:background="@drawable/style_background_white"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_post_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_cost_per_seat"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_button_solid_circle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="@font/ralewaylight"
                android:paddingLeft="10dp"
                android:text="Post Date"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/place_post_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:background="@drawable/style_background_white"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_total_seats_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_post_date"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_button_solid_circle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="@font/ralewaylight"
                android:paddingLeft="10dp"
                android:text="Total Seats Available"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/place_total_seats_available"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:background="@drawable/style_background_white"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_departure_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_total_seats_available"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_button_solid_circle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="@font/ralewaylight"
                android:paddingLeft="10dp"
                android:text="Departure Time"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/place_departure_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:background="@drawable/style_background_white"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

