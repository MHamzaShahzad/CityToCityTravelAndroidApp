<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FragmentUploadVehicle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:text="Upload Your Vehicle"
            android:fontFamily="@font/raleway_semi_bold"
            android:background="@drawable/circle_button_style"
            android:layout_margin="20dp"/>


            <LinearLayout
                android:id="@+id/layout_upload_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/txt_vehicle">

                <ImageView
                    android:id="@+id/vehicle_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style_edit_box"
                    android:layout_margin="10dp"
                    android:src="@drawable/car" />

                <EditText
                    android:id="@+id/vehicle_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_edit_box"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="sans-serif-light"
                    android:hint="Vehicle Model"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/vehicle_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vehicle Number"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_edit_box"
                    android:textSize="15sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="sans-serif-light"
                    android:inputType="number" />
            </LinearLayout>


        <ImageView
            android:id="@+id/upload_vehicle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout_upload_vehicle"
            android:layout_margin="20dp"
            android:background="@drawable/circle_button_style"
            android:src="@drawable/ic_arrow_forward_black" />

    </RelativeLayout>

</FrameLayout>