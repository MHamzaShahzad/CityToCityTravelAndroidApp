<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    tools:context=".user.FragmentUserProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/user_avatar" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userProfileImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/raleway_semi_bold"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:text="User Name"/>

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userPhoneNumber"
            android:textSize="17sp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/ralewaylight"
            android:text="Address"/>

        <TextView
            android:id="@+id/userPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userName"
            android:textSize="17sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorText"
            android:text="+923001234567"/>

        <Button
            android:id="@+id/btnEditMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_button_solid"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="@font/ralewaylight"
            android:layout_alignParentBottom="true"
            android:text="Edit Profile"/>

    </RelativeLayout>

</FrameLayout>