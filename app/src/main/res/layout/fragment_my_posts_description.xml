<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".user.FragmentMyPostsDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnCompletePost"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:id="@+id/layout_description"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/image_my_post_description"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/style_edit_box"
                        android:src="@drawable/car" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@id/image_my_post_description"
                        android:layout_toRightOf="@id/image_my_post_description">

                        <TextView
                            android:id="@+id/txt_my_post_desc_post_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:text="Post Time"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/place_my_post_desc_post_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_my_post_desc_post_time"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorText"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_my_post_departure_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/place_my_post_desc_post_time"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:text="Departure Date"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/place_my_post_departure_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_my_post_departure_date"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorText"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_my_post_departure_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/place_my_post_departure_date"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/raleway_semi_bold"
                            android:text="Departure Time"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/place_my_post_departure_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_my_post_departure_time"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorText"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_depart_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_description"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_departure_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Departure City"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_departure_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="@font/ralewaylight"
                        android:lines="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_depart_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_depart_city"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_departure_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Departure Location"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_departure_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="@font/ralewaylight"
                        android:maxLines="2"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        app:autoSizeMaxTextSize="17sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_Arrival_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_depart_location"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_arrival_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Arrival City"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_arrival_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="@font/ralewaylight"
                        android:lines="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_Arrival_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_Arrival_city"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_arrival_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Arrival Location"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_arrival_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="@font/ralewaylight"
                        android:maxLines="2"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        app:autoSizeMaxTextSize="17sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_totalNoOfSeatsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_Arrival_location"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_totalNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Total Seats Available"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_totalNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_maximumNoOfSeatsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_totalNoOfSeatsAvailable"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_maximumNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Max Seats Available"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_maximumNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_my_post_minimumNoOfSeatsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_my_post_maximumNoOfSeatsAvailable"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_my_post_minimumNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Min Seats Available"
                        android:textColor="@color/colorText"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/place_my_post_minimumNoOfSeatsAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/style_button_solid_circle"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_my_post_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_my_post_minimumNoOfSeatsAvailable"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_request_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_my_post_minimumNoOfSeatsAvailable"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heading_offer_requests_for_my_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semi_bold"
                        android:text="Requests : "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/place_numberOfRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_offer_requests_for_my_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_request_string"
                    android:background="@color/colorShadow"
                    android:paddingBottom="5dp" />

                <Button
                    android:id="@+id/btn_view_on_map"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/recycler_offer_requests_for_my_post"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_button_solid"
                    android:fontFamily="@font/raleway_semi_bold"
                    android:text="View On Map"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnCompletePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@drawable/style_button_solid"
            android:fontFamily="@font/ralewaylight"
            android:text="Complete this post"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>